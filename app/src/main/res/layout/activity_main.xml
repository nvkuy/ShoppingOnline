<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nguyenvukhanhuygmail.shoppingonline.activity.MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/DrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Tool Bar -->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_home"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorPrimary"
                app:title="Trang chá»§"
                app:titleTextColor="@color/whire">

            </android.support.v7.widget.Toolbar>

            <!-- Tab Bar -->
            <android.support.design.widget.TabLayout
                app:tabIndicatorColor="@color/whire"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:minHeight="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/toolbar_home"
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:layout_below="@+id/tab_layout"
                android:id="@+id/paper"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

            </android.support.v4.view.ViewPager>

        </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <!--<ListView-->
            <!--android:id="@+id/lv_home"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--</ListView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/user_wall"
                        android:scaleType="centerCrop"
                        android:background="@drawable/profile_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- user icon -->
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/user_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/default_user" />

                        <!-- user name -->
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tv_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/whire"
                            android:textSize="22sp" />

                        <!-- user email -->
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/whire"
                            android:textSize="18sp" />


                        <!-- logout btn -->
                        <Button
                            android:id="@+id/btn_logout"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:background="@drawable/logout" />

                    </LinearLayout>

                </FrameLayout>

                <GridView
                    android:id="@+id/gv_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:numColumns="3">


                </GridView>


            </LinearLayout>

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
