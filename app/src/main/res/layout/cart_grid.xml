<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="9dp"
        app:cardCornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="240dp">

                <ImageView
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/CartProductImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:maxLines="2"
                    android:gravity="center"
                    android:text="test"
                    android:id="@+id/CartProductName"
                    android:textSize="17.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--<TextView-->
                    <!--android:gravity="center"-->
                    <!--android:text="test"-->
                    <!--android:id="@+id/CartProductNum"-->
                    <!--android:textSize="17.5sp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->

                <com.nguyenvukhanhuygmail.shoppingonline.ultil.CustomEditText
                    android:inputType="none"
                    android:editable="false"
                    android:text="15"
                    android:drawableRight="@drawable/ic_add_box_black_24dp"
                    android:drawableLeft="@drawable/ic_indeterminate_check_box_black_24dp"
                    android:drawablePadding="5dp"
                    android:textSize="17.5sp"
                    android:gravity="center"
                    android:id="@+id/CartProductNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="9999999"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:id="@+id/CartProductPrice"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>